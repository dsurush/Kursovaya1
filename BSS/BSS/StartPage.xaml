<Page x:Class="BSS.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BSS"
      mc:Ignorable="d" 
              Title="BSS" Height="450" Width="650" Background="White">
    <Grid>
        <Image x:Name="back" Source="back.jpg" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,0,200"></Image>
        <Button x:Name="admin" Content="Админ" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="25,40,0,0"/>
        <Button x:Name="teacher" Content="Препродователям" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Margin="25,80,0,0"/>
        <Button x:Name="user" Content="Успеваемость студентов" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140" Margin="25,120,0,0" Click="user_Click"/>
    </Grid>
</Page>
