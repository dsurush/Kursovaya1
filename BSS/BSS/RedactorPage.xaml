<Page x:Class="BSS.RedactorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BSS"
      mc:Ignorable="d" 
      Title="RedactorPage" Height="450" Width="650" Background="White">

        <Grid>
        <Image x:Name="back" Source="background.jpg" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="-235,-200,-330,-465" Height="1115" Width="1215"></Image>    
        <ListBox Name="listBoxLecturers" DisplayMemberPath="Info" Margin="-10,60,-5,90" Height="300"/>
        <Button x:Name="logout" Content="Выход" HorizontalAlignment="Right" VerticalAlignment="Top" Width="60" Click="logout_Click"  Height="20" Margin="0,0,15,0"/>

        <Button Name="buttonAdd" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15,0,0,50" RenderTransformOrigin="0.85,0.4" >Добавить</Button>
        <Button Name="buttonRemove" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="130,0,0,50" IsEnabled="False" >Удалить</Button>
    </Grid>
</Page>
